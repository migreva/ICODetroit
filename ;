@import 'lib/base';
@import 'jeet/scss/jeet/index.scss';


$footer-height: 60px;

@mixin subpage-body($page-type, $color) {

  &.#{$page-type} {
   .title {
      color: $color;
    }

    .footer, #navbar {
      background-color: $color;
    }

    .pages {
      .page.#{$page-type} {
        display: none;
      }
    }

    .nav-item {
      background: $color;
    }
  }
}

body {
  margin-bottom: $footer-height;

  @include subpage-body('projects', $projects-color);

  @include subpage-body('calendar', $calendar-color);

  @include subpage-body('blog', $blog-color);

  @include subpage-body('about',$about-color);
}

.title {
  text-align: center;
  width: 100%;
  display: block;

  .page-title {
    letter-spacing: 10px;
  }

  .page-subtitle {
    text-transform: lowercase;
  }
}

.footer {
  position: fixed;
  height: $footer-height;
  width: 100%;
  padding: 10px;
  bottom: 0;
  left: 0;
  line-height: 45px;
  color: white;

  .page-name {
    text-transform: lowercase;
    font-size: 25px;
    font-family: 'KD';
  }
}


/* Navbar stuff */

.navbar, .pages {
  @include column(1/1);
  font-family: 'Claire Hand';
  font-weight: bold;
  background: inherit;

  @media (min-width: $screen-sm) {
    @include column(1/4);
  }

  a {
    text-decoration: none;
    color: white;
  }
}

.pages {
  position: fixed;
  bottom: $footer-height;
  left: 0;

  &.hidden {
    .nav-item {
      display: none;
    }
  }

  .nav-item {
    opacity: 0;
    border: 1px solid white;

    &.projects {
      background: $projects-color !important;
    }

    &.calendar {
      background: $calendar-color !important;
    }

    &.blog {
      background: $blog-color !important;
    }

    &.about {
      background: $about-color !important;
    }
  }
}

.menu-toggle, .nav-page {
  width: 100%;
  height: $footer-height;
  line-height: $footer-height;
